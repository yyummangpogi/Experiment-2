#include<iostream>
#include<conio.h>
#include<cmath>
#include<iomanip>
using namespace std;
int main()
{
	
	int x;
	double z;
	double y;
	double v;
	z = 2.5;
	
	cout<<"Good Day!"<<endl<<endl;
	cout<<"The value of V depends on the value of x and y as follows:"<<endl<<endl;
	cout<<"V = xyz              when x = 1 and 1<y<5"<<endl;
	cout<<"V = x + y/z          when x = 1 and y>=5"<<endl;
	cout<<"V = |(x - y) /z|     when x = 2 and y<=5"<<endl;
	cout<<"V = x - 0.5(y + z)   when x = 2 and y>5"<<endl;
	cout<<"V = x + y + z        for other values of x and y"<<endl<<endl;
	
	cout<<"Enter value for x: ";
	cin>>x;
	cout<<"Enter value for y: ";
	cin>>y;
	
	cout.precision(2);
	
	switch(x)
	{
		case 1:
			{
				if (y>=5)
				{
					v = x + (y/z);
					cout<<endl<<"      V = x + (y/z)"<<endl;
					cout<<setw(10)<<"V = "<<fixed<<v;
				}
				else if (y>1 && y<5)
				{
					v = x*y*z;
					cout<<endl<<"      V = xyz"<<endl;
					cout<<setw(10)<<"V = "<<fixed<<v;
				} 
				else
				{
					v = x+y+z;
					cout<<endl<<"      V = x + y + z"<<endl;
					cout<<setw(10)<<"V = "<<fixed<<v;
				}
			break;
			}
			
			case 2:
				{
					if (y<=5)
					{
						v = abs((x - y)/z);
						cout<<endl<<"      V = |(x - y) /z|"<<endl;
						cout<<setw(10)<<"V = "<<fixed<<v;
					}
					else if (y>5)
					{
						v = x - (0.5 * (y + z));
						cout<<endl<<"      V = x - 0.5(y + z)"<<endl;
						cout<<setw(10)<<"V = "<<fixed<<v;
					}
			break;		
			}
			
			default:
				{
					v = x+y+z;	
					cout<<endl<<"      V = x + y + z"<<endl;	
					cout<<setw(10)<<"V = "<<fixed<<v;
				}
	}
	
	
	_getch();
	return 0;
}
